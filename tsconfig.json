{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client", "node"],
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@components": ["components/index.ts"],
      "@context/*": ["context/*"],
      "@context": ["context/index.ts"],
      "@features/*": ["main/features/*"],
      "@hooks/*": ["hooks/*"],
      "@main/*": ["main/*"],
      "@mocks/*": ["mocks/*"],
      "@models/*": ["models/*"],
      "@pages/*": ["pages/*"],
      "@providers/*": ["providers/*"],
      "@routes/*": ["routes/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".spec.ts",
    ".test.ts",
    "coverage"
  ]
}
